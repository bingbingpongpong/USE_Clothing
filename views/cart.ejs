<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Shirt App</title>
</head>

<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Shirt App</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/size">Size Guide</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/addshirt">Add new shirt</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/history">History</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <br>
        <div class="text-center">
            <h2>Shopping Cart</h2>
        </div>
        <br>
        <table class="table table-hover small text-center">
            <thead>
                <tr>
                    <th>Shirt Name</th>
                    <th>Image</th>
                    <th>Price</th>
                    <th>Size</th>
                    <th>Remove</th>
                </tr>
            </thead>
            <tbody>
                <% cartItems.forEach(item=> { %>
                    <tr>
                        <td>
                            <%= item.shirtName %>
                        </td>
                        <td><img src="/images/<%= item.image %>" width="50"></td>
                        <td>
                            <%= item.price.toFixed(2) %>
                        </td>
                        <td>
                            <%= item.size %>
                        </td>
                        <td><a href="/deletecart/<%= item.shirtId %>">Remove</a></td>
                    </tr>
                    <% }) %>
                        <tr>
                            <td><strong>Total Price:</strong></td>
                            <td>$<%= total.toFixed(2) %>
                            </td>
                        </tr>
            </tbody>
        </table>
        <div class="mt-4">
            <form class="row g-3">
                <div class="col-md-6">
                    <label for="inputAddress" class="form-label">Address</label>
                    <input type="text" class="form-control" id="inputAddress" placeholder="Blk 706 #12-31">
                </div>
                <div class="col-md-3">
                    <label for="inputCardNumber" class="form-label">Card Number</label>
                    <input type="text" class="form-control" id="inputCardNumber" placeholder="1234 5678 9101 1112">
                </div>
                <div class="col-md-3">
                    <label for="inputCVC" class="form-label">CVC</label>
                    <input type="text" class="form-control" id="inputCVC" placeholder="123">
                </div>
            </form>
        </div>

        <tbody>
            <a href="/checkout" class="btn btn-primary">Checkout</a>
            <a href="/" class="btn btn-secondary">Continue Shopping</a>
        </tbody>
    </div>