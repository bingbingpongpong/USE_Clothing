<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shirt App</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">USE_Clothing</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/size">Size Guide</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/addshirt">Add New Shirt</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cart">Cart</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/history">History</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <h2 class="text-center mb-4">Shirts</h2>
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Shirt Name</th>
            <th>Shirt Image</th>
            <th>Price</th>
            <th>Size</th>
            <th>Edit</th>
            <th>Delete</th>
            <th>Add to Cart</th>
          </tr>
        </thead>
        <tbody>
          <% for (let i=0; i < shirts.length; i++) { %>
            <tr>
              <td><a href="/shirt/<%= shirts[i].shirtId %>" class="text-decoration-none">
                  <%= shirts[i].shirtName %>
                </a></td>
              <td><img src="images/<%= shirts[i].image %>" alt="<%= shirts[i].shirtName %>" style="max-width: 100px;">
              </td>
              <td>$ <%= shirts[i].price.toFixed(2) %>
              </td>
              <td>
                <%= shirts[i].size %>
              </td>
              <td><a href="/editShirt/<%= shirts[i].shirtId %>" class="btn btn-primary btn-sm">Edit</a></td>
              <td><a href="/deleteShirt/<%= shirts[i].shirtId %>" class="btn btn-danger btn-sm"
                  onclick="return confirm('Are you sure you want to delete this shirt?')">Delete</a></td>
              <td><a href="/addcart/<%= shirts[i].shirtId %>" class="btn btn-success btn-sm">Add to Cart</a></td>
            </tr>
            <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>